---
<section class="gridmainarea bg-change"  data-color="#FFFFFF">
  <div class="container">
      <div class="headingarea">
          <div class="topbar">
              <h2>Latest Articles</h2>
          </div>
          <Button href="/" text="more" variant="primary" extraClass="small-icon-btn" withArrow />
      </div>
      <div class="cardgrid cardgrid-col3">
        {posts.map((post) => (
          <a href="">
          <article class="grid-item">
            <div class="card-img zoom-img">
              <img src={post.image} alt={post.title} loading="lazy" />
            </div>

            <div class="card-content">
              <div class="meta">
                <span class="date">Posted on <span class="font-semibold text-[#4E4E4E]">{post.date}</span></span>
                <span class="divider"></span>
                <span class="category">{post.category}</span>
              </div>
              <div class="text-wrap reveal">
                <h5  class="title ">{post.title}</h5>
                <p  class="excerpt ">{post.excerpt}</p>
              </div>
            </div>
          </article>
          </a>
        ))}
      </div>
  </div>
</section>

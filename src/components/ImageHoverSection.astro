const imageCount = 5;

const images = Array.from({ length: imageCount }, (_, i) => ({
  src: `/images/hover/about${i + 1}.png`,
  alt: `Image ${i + 1}`,
}));

// ✅ Split images into 3 automatic groups
const groups = [
  images.slice(0, 2),   // group 1 → 2 images
  images.slice(2, 3),   // group 2 → 1 image
  images.slice(3),      // group 3 → rest (2 images here)
];
---
<section class="image-hover-section bg-change" data-color="#FFFFFF"   data-cursor="hide">
  <div class="container">
    <div class="image-hover-wrap" id="imageHoverWrap">

          {groups.map((group, groupIndex) => (
          <div class="wrapper_image " key={groupIndex}>
            {group.map((img, i) => (
              <div class="img-box" key={`g${groupIndex}-${i}`}>
                <img src={img.src} alt={img.alt} loading="lazy" />
              </div>
            ))}
          </div>  
        ))}
    </div>

    <div class="center-content">
      <!-- <div class="floating-text">Who we are?</div> -->
      <div class="floating-text">
        <span class="left">Who we</span>
        <span class="right">are?</span>
      </div>
      <div class="fixed-text">ads . codes . dezigns</div>
      <div class="text-wrap">
        <h6>
          We are an international award-winning IT company with 6 offices across India,
          and offers web design, web development and digital marketing services.
        </h6>
      </div>
    </div>

  </div>
</section>







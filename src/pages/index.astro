---
import BaseLayout from "../layouts/BaseLayout.astro";
import BannerSection from "../components/HeroBanner.astro";
import TestimonialSection from "../components/TestimonialSection.astro";
import GsapBgChange from "../components/GsapBgChange.jsx";
import ImageHoverSection from "../components/ImageHoverSection.astro";
import ServicesScrolleffect from "../components/ServicesScrolleffect.astro";
import Col3CardGrid from "../components/Col3CardGrid.astro";
import CtaSection from "../components/CtaSection.astro";
---

<BaseLayout>
  <BannerSection />
  
  <section class="video-below-banner bg-change" >
    <div class="video-wrapper" data-cursor-text="play video">
      <video class="responsive-video" poster="/images/home/banner-image.png" autoplay muted loop playsinline preload="metadata">
        <source src="/images/video1.mp4" type="video/mp4" />
        <!-- Optional WebM fallback -->
        <source src="/images/video1.mp4" type="video/webm" />
        Your browser does not support the video tag.
      </video>
      <button class="video-close-btn" aria-label="Close video">
      <svg width="18" height="18" viewBox="0 0 24 24">
        <line x1="5" y1="5" x2="19" y2="19" stroke="white" stroke-width="2"/>
        <line x1="19" y1="5" x2="5" y2="19" stroke="white" stroke-width="2"/>
      </svg>
    </button>

    </div>
  </section>
  
  <ImageHoverSection />
  
  <ServicesScrolleffect />
  <GsapBgChange client:load />
  <Col3CardGrid />
  <CtaSection />


  <script type="module" client:visible>
    import('/src/js/main.js').catch(err => {
      console.error('Failed to import /src/js/main.js:', err);
    });
  </script>

 
</BaseLayout>

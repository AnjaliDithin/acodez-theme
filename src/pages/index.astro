---
import BaseLayout from "../layouts/BaseLayout.astro";
import BannerSection from "../components/HeroBanner.astro";
import ImageHoverSection from "../components/ImageHoverSection.astro";
import ServicesScrolleffect from "../components/ServicesScrolleffect.astro";
import Col3CardGrid from "../components/Col3CardGrid.astro";
import CtaSection from "../components/CtaSection.astro";
import Faq from "../components/Faq.astro";
import Col2Grid from "../components/Col2Grid.astro";
import TestimonialTooltip from "../components/TestimonialTooltip.astro";
import StatsHighlight from "../components/StatsHighlight.astro";
import Col3ProjectSlider from "../components/Col3ProjectSlider.astro";
import ArcSlider from "../components/ArcSlider.astro";
import ClientLogogrid from "../components/ClientLogogrid.astro";
import FeaturedWorks from "../components/FeaturedWorks.astro";
import AwardsTicker from "../components/AwardsTicker.astro";
import FeaturedMedia from "../components/FeaturedMedia.astro";
const faqServices= [
  {
    id: "01",
    title: "Why should I do my web design and development from Acodez?",
    description:
      "Acodez is a leading web design company in India with 10+ years of experience and 16 international awards to its credit. We also have experience working for many leading MNCs for their web design and development projects. Acodez operates from its 6 offices across India and has worked on more than 1000+ web design projects for our clients across the globe, from more than 80 countries.",
  },
  {
    id: "02",
    title: "Why is India an ideal choice for web development outsourcing?",
    description:
      "We build responsive, fast, and scalable web applications using modern technologies and best practices.",
  },
  {
    id: "03",
    title: "How to find the best web design company in India?",
    description:
      "Custom software solutions tailored to your business needs with cutting-edge technology stack.",
  },
  {
    id: "04",
    title: "How much does it cost to hire a web developer in India?",
    description:
      "Comprehensive digital marketing strategies to grow your online presence and reach your target audience.",
  },
  {
    id: "05",
    title: "Do you do custom website design or use pre-built templates?",
    description:
      "Our highly creative team of designers always excels in creating unique brand identity and out-of-the-box designs that speaks on its own!",
  },
];
---

<BaseLayout>
  <BannerSection />
  
  <section class="full-video-block bg-change" >
    <div class="video-wrapper" data-cursor-text="play video">
      <video class="responsive-video" poster="/images/home/video-bg.png" autoplay muted loop playsinline preload="metadata">
        <source src="/images/video1.mp4" type="video/mp4" />
        <!-- Optional WebM fallback -->
        <source src="/images/video1.mp4" type="video/webm" />
        Your browser does not support the video tag.
      </video>
      <button class="video-close-btn" aria-label="Close video">
      <svg width="18" height="18" viewBox="0 0 24 24">
        <line x1="5" y1="5" x2="19" y2="19" stroke="white" stroke-width="2"/>
        <line x1="19" y1="5" x2="5" y2="19" stroke="white" stroke-width="2"/>
      </svg>
    </button>

    </div>
  </section>
  
  <ImageHoverSection />
  
  <ServicesScrolleffect />
  <FeaturedWorks />
  <ClientLogogrid />
  <ArcSlider />
  <AwardsTicker />
  <FeaturedMedia />
  <Col3ProjectSlider />

  <StatsHighlight />
  <Col2Grid 
    title="Acodie"
    subtitle="OUR MASCOT"
    description="We love illustrations and Acodie, our mascot, is a cool showcase of our creativity. You could find Acodie in every page of this site in various styles and emotions."
    image="/images/home/acodie.png"
    reverse={false} />
  <TestimonialTooltip />
  <Faq heading="Got Questions?" services={faqServices} bgColor="#F6F8FA" />
  <Col3CardGrid />
  <CtaSection />
 
</BaseLayout>
  <script src="../scripts/main.js"></script>

